{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@legacy-design-system/*": [
        "src/legacy-design-system/*"
      ],
      "@design-system/*": [
        "src/design-system/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "types": [
      "expo-router/types",
      "react",
      "react-native",
      "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
